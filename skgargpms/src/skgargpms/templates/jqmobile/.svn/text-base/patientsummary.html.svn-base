{% extends "jqmobile/base_jqmobile.html" %}
{% load l10n %}

<!-- Main Page -->
{% block main_page %}

<div data-role="page" data-theme="c">

	<div data-role="header" data-theme="a" data-position="fixed">
		<h1>		<a href="/jqmobile/" data-role="button" data-icon="home" data-theme="c">Home</a></h1>
		<a href="" data-role="button" data-icon="back" data-rel="back">Back</a>
	
			<a href="" data-role="button" data-icon="arrow-r" data-theme="b" data-rel="back">Stations</a>
	</div><!-- /header -->

	<div data-role="content">	
		
		<ul data-role="listview" data-inset="true" data-theme="d" data-divider-theme="d">
					<li data-role="list-divider"><h1>Patient Summary</h1></li>
									
					{% for patient in patients %}
						<li><a href="/jqmobile/patient/{{patient.header_id}}/">
						<div class="ui-grid-a">
							<div class="ui-block-a"><strong>{{patient.name}} ({{ patient.event_num }})</strong></div>
							<div class="ui-li-aside">{{ patient.waiting_time }}</div>
						</div>			
						</a></li>
					{% endfor %}
		</ul>

	</div><!-- /content -->
	
	<div data-role="footer" data-theme="a" data-position="fixed">
		<h4>Footer content</h4>
	</div><!-- /footer -->
	
	
	
	
	
</div><!-- /page -->

{% endblock %}