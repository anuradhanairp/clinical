<html>

	<head>
	
	</head>
	
	<body onload='window.print()'>
	
	
	<div width="100%" height="100%">
		
		<table border="1" >
		
		<tr>
			<td colspan='4' align='center'>
			
			<h3> RECEIPT </h3>
			
			</td>
		</tr>
		<tr>
			<td rowspan='2'>
				{{ esh.clinic.name }} at {{ esh.clinic.location.name }}
			</td>
			<td colspan='3' align='center'>
				Patient ID: {{ esh.id }}
			</td>
		</tr>
		<tr>
			<td colspan='3' align='center' >
				Date: {{ date }}
			</td>
		</tr>
		
		<tr>
			<td colspan='4'>
				Received Total of <b>${{ esh.get_total }} </b> from <b> {{ esh.patient.fName }} </b> Towards Consulting Fee and other charges.
			</td>
		<tr>
		
		<tr>
			<td colspan='4' align='center'>
					Payment Details 
			</td>
		<tr>
		
		<!--  Here we list the individual payments. -->
		
		<tr>
			<td> ### </td> <td> Procedure </td><td> Payment Type </td>  <td> Amount ($) </td>  
		</tr>
		{% for payment in payments %}
			
			{% if payment.amount > 0 %}
			
			<tr>
				<td>
					
					{{ forloop.counter }}
				</td>
				<td>
					{% if payment.interrupttype %}
						{{ payment.interrupttype }}
					{% else %}
						Consulting
					{% endif %}
				</td>
				<td>
					{{ payment.type }}
				</td>
				<td align='right'>
					${{ payment.amount }}
				</td>
				
				
			<tr>
			{% endif %}
		{% endfor %}
		
		<tr>
			<td colspan='3' align='right'>
				Sub Total
			</td>
			<td align='right'>
			
				<b> ${{ esh.get_positivetotal }} </b>
			</td>
		</tr>
		<tr>
			<td colspan='3' align='right'>
				Deduction
			</td>
				
			<td align='right'>
				<b> ${{ esh.get_negativetotal}} </b>
			</td>
		</tr>	
		<tr>
			<td colspan='3' align='right'>
				TOTAL
			</td>
				
			<td align='right'>
				<b>  ${{ esh.get_total}} </b>
			</td>
		</tr>	
		
		</table>
		
	</div>

</html>